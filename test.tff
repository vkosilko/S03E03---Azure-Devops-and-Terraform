
resource "azurerm_container_group" "tfcg_test" {
  name                      = "weatherapi"
  location                  = azurerm_resource_group.tf_test.location
  resource_group_name       = azurerm_resource_group.tf_test.name

  ip_address_type     = "public"
  dns_name_label      = "binarythistlewa"
  os_type             = "Linux"

  container {
      name            = "weatherapi"
      image           = "binarythistle/weatherapi:${var.imagebuild}"
        cpu             = "1"
        memory          = "1"

        ports {
            port        = 80
            protocol    = "TCP"
        }
  }
}


terraform {
    backend "azurerm" {
        resource_group_name  = "tf_rg_blobstore"
        storage_account_name = "tfstoragebinarythistle"
        container_name       = "tfstate"
        key                  = "terraform.tfstate"
    }
}


terraform {
  required_version = ">= 0.12.6"
  
  backend "azurerm" {
    subscription_id      = "7ac39904-41c4-41d5-b148-2c817693030c"
    resource_group_name  = "aterraform-rg"
    storage_account_name = "myterraform"
    container_name       = "tfstate"
    key                  = "root.terraform.tfstate"
  }
}


variable "imagebuild" {
  type        = string
  description = "Latest Image Build"
}

